<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dip" />

            <stroke
                android:width="0.5dp"
                android:color="#FF494B" />

            <gradient
                android:angle="0"
                android:centerColor="#FFEBEC"
                android:centerY="0.75"
                android:endColor="#FFEBEC"
                android:startColor="#FFEBEC" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="15dip" />

                <stroke
                    android:width="0.5dp"
                    android:color="#FF494B" />

                <gradient
                    android:angle="0"
                    android:centerColor="#FFEBEC"
                    android:centerY="0.75"
                    android:endColor="#FFEBEC"
                    android:startColor="#FFEBEC" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15dip" />

                <stroke
                    android:width="0.5dp"
                    android:color="#FF494B" />

                <gradient
                    android:angle="0"
                    android:endColor="#FF494B"
                    android:startColor="#FF494B" />
            </shape>
        </clip>
    </item>

</layer-list>