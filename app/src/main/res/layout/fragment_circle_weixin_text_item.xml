<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/youliao_juxing"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:paddingRight="10dp"
            android:text="凉薄de凉"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <com.lsjr.zizisteward.newview.CircleImageView
            android:id="@+id/c_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="不愧是柳善酒店入化首秀，该有的试试有营养经验，不愧是柳善酒店入化首秀，不愧是柳善酒店入化首秀，不愧是柳善酒店入化首秀，电瓶车非常多，属于随叫随到，不愧是柳善酒店入化首秀，该有的试试有营养经验，电瓶车非常多，属于随叫随到，"
        android:textColor="#222222"
        android:textSize="15sp" />
    
    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <TextView 
                android:gravity="center_vertical"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="2016-8-9"/>
            
            <LinearLayout 
                android:id="@+id/ll_comm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                
                <ImageView
                    android:id="@+id/iv_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/youliao_pinglun" />
                
                <TextView 
                    android:id="@+id/tv_comments_num"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="14sp"
                    android:text="12"/>
                
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/ll_like"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/touliao_diaozan" />
                
                <TextView 
                    android:id="@+id/tv_num"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:text="12"
                    android:textSize="14sp"
                    android:layout_marginRight="15dp"/>
                
            </LinearLayout>
            
        </LinearLayout>

</LinearLayout>