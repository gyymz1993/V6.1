<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/while_btn_shape"
        android:gravity="center"
        android:orientation="vertical">

        <com.lsjr.zizisteward.ly.activity.RoundImageView
            android:id="@+id/id_ig_recommed"
            android:layout_width="160dip"
            android:layout_height="140dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/user_head"
            app:borderRadius="5dp"
            app:type="round" />

        <TextView
            android:id="@+id/id_tv_recommed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="与非[价格1500/m]" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:lines="3"
            android:text=" 都是文字都是文字" />
    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/common_bg" />

</RelativeLayout>