<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/icon_background_image"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.lsjr.zizisteward.ly.activity.RoundImageView
            android:id="@+id/iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:scaleType="fitXY"
            app:borderRadius="7dp"
            app:type="round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_record_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical|top"
                android:textColor="#383838"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_record_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#989898"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_record_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|bottom"
                android:textColor="#F5A623"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>