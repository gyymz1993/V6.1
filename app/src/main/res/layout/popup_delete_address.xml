<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/delete_address_msg"
        android:gravity="center"
        android:text="确定删除该地址吗?"
        android:textColor="@color/black" />

    <View
        android:id="@+id/view"
        android:layout_width="300dp"
        android:layout_height="0.1dp"
        android:layout_below="@+id/tv_msg"
        android:background="@color/gray_light" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="149.9dp"
        android:layout_height="40dp"
        android:layout_below="@+id/view"
        android:background="@drawable/delete_cancel"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black" />

    <View
        android:id="@+id/view2"
        android:layout_width="0.1dp"
        android:layout_height="40dp"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/tv_cancel"
        android:background="@color/gray_light" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="149.9dp"
        android:layout_height="40dp"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/view2"
        android:background="@drawable/delete_confirm"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/black" />

</RelativeLayout>