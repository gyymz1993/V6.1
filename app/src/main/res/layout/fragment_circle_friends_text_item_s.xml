<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF">
    
    <RelativeLayout 
        android:id="@+id/ll_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        
      <TextView 
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_name"
        android:paddingLeft="35dp"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/youliao_juxing"
        android:text="凉薄de凉"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FFFFFF"/>
        
    <com.lsjr.zizisteward.newview.CircleImageView 
        android:id="@+id/c_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />
    
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/ll_content"
        android:layout_below="@id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/tv_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="#222222"
            android:text="不愧是柳善酒店入化首秀，该有的试试有营养经验，不愧是柳善酒店入化首秀，不愧是柳善酒店入化首秀，不愧是柳善酒店入化首秀，电瓶车非常多，属于随叫随到，不愧是柳善酒店入化首秀，该有的试试有营养经验，电瓶车非常多，属于随叫随到，"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <TextView 
                android:gravity="center_vertical"
                android:id="@+id/tv_time"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="2016-8-9"/>
            
            <LinearLayout 
                android:visibility="gone"
                android:id="@+id/ll_delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                
                <TextView 
                    android:id="@+id/tv_delete"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="14sp"
                    android:text="删除"/>
                
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <View 
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#efefef"/>

</RelativeLayout>
