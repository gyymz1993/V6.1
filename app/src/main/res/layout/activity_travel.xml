<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/vip_travel" />

            <RelativeLayout
                android:id="@+id/re_kdnskj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_vip"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_order_ticket"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/order_ticket" />

                    <ImageView
                        android:id="@+id/iv_order_hotel"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/hotel_order" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_one"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/iv_car_service"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/car_service" />

                        <ImageView
                            android:id="@+id/iv_travel_department"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_below="@+id/iv_car_service"
                            android:layout_marginTop="1dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/trave_set" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_deep_travel"
                        android:layout_width="0dp"
                        android:layout_height="101dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/deep_travel" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_imzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re_kdnskj"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Z  I  Z  I 俱乐部"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.lsjr.zizisteward.newview.MyListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_imzi"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:listSelector="@color/transparent"
                android:scrollbars="none" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>