<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg" >

    <TextView
        android:id="@+id/random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="2000以内"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/hightodown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/random"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="2000——10000"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/downtohigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hightodown"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="10000——20000"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/moretwowan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/downtohigh"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="大于20000"
        android:textColor="@color/black" />

</RelativeLayout>