<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="70dp"
            android:layout_height="70dp" >

            <com.lsjr.zizisteward.ly.activity.RoundImageView
                android:id="@+id/riv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                app:borderRadius="5dp"
                app:type="round" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_ban"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_topic_ban" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_select"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_topic_select" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/iv_label"
                android:layout_width="28dp"
                android:layout_height="15dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_p_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:singleLine="true"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>